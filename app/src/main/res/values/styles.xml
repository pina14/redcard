<resources>

    <style name="CIButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/buttonColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppCompat.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/lightPrimaryColor1</item>
        <item name="android:textColorPrimary">@color/lightPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/lightSecondaryTextColor</item>
    </style>

    <style name="DialogThemeLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/lightColorAccent</item>
        <item name="android:windowBackground">@color/lightBackgroundColor</item>

    </style>

    <style name="DialogThemeDark" parent="Theme.AppCompat.Light.Dialog">
