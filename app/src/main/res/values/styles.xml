<resources>

    <style name="CustomButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/buttonColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DialogThemeLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/lightColorAccent</item>
        <item name="android:windowBackground">@color/lightBackgroundColor</item>

    </style>

    <style name="DialogThemeDark" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:windowBackground">@color/darkBackgroundColor</item>
    </style>

    <style name="AppCompat.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="primaryColor1">@color/darkPrimaryColor1</item>
        <item name="primaryColor2">@color/darkPrimaryColor2</item>
        <item name="primaryColor3">@color/darkPrimaryColor3</item>
        <item name="secondaryColor1">@color/darkSecondaryColor1</item>
        <item name="secondaryColor2">@color/darkSecondaryColor2</item>
        <item name="secondaryColor3">@color/darkSecondaryColor3</item>
        <item name="android:textColor">@color/darkPrimaryTextColor</item>
        <item name="primaryTextColor">@color/darkPrimaryTextColor</item>
        <item name="secondaryTextColor">@color/darkSecondaryTextColor</item>
        <item name="tertiaryTextColor">@color/darkTertiaryTextColor</item>
        <item name="backgroundColor">@color/darkBackgroundColor</item>
        <item name="drawerIconColor">@color/darkDrawerIconColor</item>
        <item name="colorPrimary">@color/darkPrimaryColor2</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor1</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:colorBackground">@color/darkBackgroundColor</item>
        <item name="android:colorForeground">@color/darkBackgroundColor</item>
        <item name="android:textColorPrimary">@color/darkPrimaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/darkTertiaryTextColor</item>
        <item name="android:textColorSecondary">@color/darkSecondaryTextColor</item>
        <item name="android:textColorSecondaryInverse">@color/darkSecondaryTextColor</item>
        <item name="android:windowBackground">@color/darkBackgroundColor</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:dialogTheme">@style/DialogThemeDark</item>
        <item name="android:popupBackground">@color/darkBackgroundColor</item>
    </style>

