<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".controller.fragments.SignupFragment"
                                             android:id="@+id/signup_layout">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/signup_logo_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:background="?attr/primaryColor2"/>
    <fragment
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:name="appdev.pina.redcard.controller.fragments.SignupFormFragment"
            android:id="@+id/signup_form_fragment"
            app:layout_constraintTop_toBottomOf="@+id/signup_logo_image" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="6dp"
            tools:layout="@layout/fragment_signup_form"/>
</android.support.constraint.ConstraintLayout>